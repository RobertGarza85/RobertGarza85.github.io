---
import PageLayout from "@/layouts/PageLayout.astro";
import { paragraphs } from "@/content/data/about.json";
import { Image } from "astro:assets";
import favicon from "@/assets/favicon.jpg";
---

<PageLayout
  title="About"
  header="About Me"
  description="Learn more about Naya Singhania here!"
>
  <div class="flex flex-col md:flex-row gap-6 items-center md:mx-12 fade">
    <div class="flex flex-col items-center">
      <Image
        src={favicon}
        alt="Square portrait of Naya Singhania"
        class="max-w-60 max-h-60 rounded-xl shadow-xl"
      />
    </div>
    <div>
      {
        paragraphs.map((paragraph) => (
          <>
            <p class="mx-2 md:mx-12">{paragraph}</p>
            <br />
          </>
        ))
      }
    </div>
  </div>
</PageLayout>
